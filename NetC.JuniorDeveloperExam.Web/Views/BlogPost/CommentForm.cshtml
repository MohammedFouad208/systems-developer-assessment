<div class="form-row">
  <div class="form-group col-md-6">
    <label for="Name">Name</label>
    <input type="text" class="form-control" id="Name" placeholder="Name" name="name">
    <span id="NameErrMsg" class="d-none text-danger"></span>
  </div>
  <div class="form-group col-md-6">
    <label for="EmailAddress">Email Address</label>
    <input type="email" class="form-control" id="EmailAddress" name="emailAddress" placeholder="Email Address">
    <span id="EmailErrMsg" class="d-none text-danger"></span>
  </div>
</div>
<div class="form-group">
  <label for="Message">Message</label>
  <textarea id="Message" class="form-control" rows="3" name="message"></textarea>
  <span id="MessageErrMsg" class="d-none text-danger"></span>
</div>
<button type="submit" class="btn btn-primary">Add Comment</button>
